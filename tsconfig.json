{
  "compilerOptions": {
      "target": "ES6", // - целевая версия при компиляции – ES5. 
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true, // - удалялись комментарии, значення за замовченням - false
       "sourceMap": true, //- удалялись map-файлы, значення за замовченням - false
      "outDir": "dist" // - была определенная директория для помещения файлов;
  },
  "include": [
      "**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}